/* pages/post/post.wxss */

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}

.post_form {
  width: 100%;
  font-size: 32rpx;
}

.post_form .item {
  border-bottom: 1rpx solid #ccc;
  height: 68rpx;
  line-height: 68rpx;
}

.post_form .item:not(:last-child) {
  border-bottom: 8rpx solid #f0f0f0;
}

.post_form .item > text {
  float: left;
}

.post_form .item > input {
  height: 100%;
  width: 80%;
}

.post_form .title > input, .post_form .tag > input {
  float: left;
  margin-left: 20rpx;
}

.post_form .tag .picker {
  color: #fff;
  background-color: #1aad19;
  width: 382rpx;
  text-align: center;
  float: left;
  margin: 0 20rpx;
  padding: 0 10rpx;
}

.post_form .post {
  line-height: 68rpx;
  border-bottom:8rpx solid #f0f0f0;
}

.post_form .post > textarea {
  width: 100%;
  min-height: 300rpx;
  background-color: #fcfcfc;
  max-height: 381px;
  overflow: hidden;
}

.post_form .btn-area > button {
  font-size: 32rpx;
  color: #fff;
  background-color: #1aad19;
  margin: 20rpx 40rpx;
}

.upload{
  padding: 10rpx;
  border-bottom:8rpx solid #f0f0f0;
}
.upload .icon_item, .upload .spec_icon {
  display: inline-block;
  text-align: center;
  width: 33%;
  height: 200rpx;
  float: left;
}
.upload .icon_item {
  line-height: 200rpx;
}
.upload .icon_item .img_box {
   display: inline-block;
  text-align: center;
  position: relative;
  z-index: 1;
}
.upload .icon_item .del_img {
  width: 36rpx;
  height: 36rpx;
  vertical-align:middle;
  position:absolute;
  right: -12rpx;
  top: 8rpx;
  z-index: 5;
}
.upload .icon_item .upload_img {
  width: 180rpx;
  height: 160rpx;
  vertical-align:middle;
  background-color:#f4f4f4;
}
.upload .spec_icon {
  box-sizing: border-box;
  border: 2rpx dashed #ccc;
  background-color: #F6F6F6;
}
.upload .spec_icon .img {
  width: 81rpx;
  height: 80rpx;
  margin-top: 30rpx;
}
